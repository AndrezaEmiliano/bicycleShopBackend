<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="br.com.exactalabs.bicycleshop">
        <description>Persistence Unit do Bicyle Shop</description>
        <class>br.com.exactalabs.bicycleshop.entity.Task</class>
        <class>br.com.exactalabs.bicycleshop.entity.Subtask</class>
        <class>br.com.exactalabs.bicycleshop.entity.Cliente</class>
        <class>br.com.exactalabs.bicycleshop.entity.PessoaFisica</class>
        <class>br.com.exactalabs.bicycleshop.entity.PessoaJuridica</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/bicycle_shop"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>

</persistence>